[require]
shader model >= 4.0

[pixel shader]
uniform int i;
uniform uint u;
uniform bool b;
uniform float f;

float4 main() : sv_target
{
    return float4(((half)i) + 1.5, ((half)u) - 2.5, ((half)b) / 2, f);
}

