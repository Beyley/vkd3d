[pixel shader]
float a;

float4 main() : sv_target
{
    int i = 0;
    float res = a;

    while (i < 10)
    {
       if (i == 5)
       {
           res += 0.1f;
           break;
       }
       res += 1.0f;
       i++;
       if (i == 2) continue;
       res += 100.f;
    }

    return res;
}

