[pixel shader]
float4 main() : sv_target
{
    float2x3 a = {1, 2, 3, 4, 5, 6};
    float3x2 b = {6, 5, 4, 3, 2, 1};

    float2x2 r = max(a, b);
    return float4(r);
}

