[require]
shader model >= 4.0

[pixel shader]

float4 main(uniform float f, uniform int i, uniform bool b, uniform half h) : sv_target
{
    float4 ret;

    ret.x = ((float)(uint)f) - 1.5;
    ret.y = ((float)(uint)i) - 1.5;
    ret.z = ((float)(uint)b) / 2;
    ret.w = ((float)(uint)h) + 0.5;
    return ret;
}

